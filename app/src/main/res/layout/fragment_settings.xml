<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidonlineshop.androidonlineshop.fragments.SettingsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textAlignment="center"
            android:text="@string/lang_choose_language"
            android:textSize="20sp" />


        <ImageButton
            android:id="@+id/lang_eng"
            android:layout_weight="0.1"
            android:layout_width="254dp"
            android:layout_height="0sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_english_language" />

        <ImageButton
            android:id="@+id/lang_de"
            android:layout_weight="0.1"
            android:layout_width="254dp"
            android:layout_height="0sp"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_german_language" />


    </LinearLayout>
</FrameLayout>
