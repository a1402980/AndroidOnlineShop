<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidonlineshop.androidonlineshop.fragments.CategoriesFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/categoriesListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </ListView>



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <Button
                android:id="@+id/addCat"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:drawableRight="@drawable/ic_playlist_add_black_24dp"
                android:text="@string/lang_add_category" />

            <Button
                android:id="@+id/removeCat"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:drawableRight="@drawable/ic_delete_sweep_black_24dp"
                android:text="@string/lang_delete_category" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
